# JWT Access Token Configuration
ACCESS_EXPIRES_IN=3600
ACCESS_PRIVATE_KEY=../assets/keys/access_private.pem
ACCESS_PUBLIC_KEY=../assets/keys/access_public.pem

# JWT Refresh Token Configuration
REFRESH_EXPIRES_IN=604800
REFRESH_PRIVATE_KEY=../assets/keys/refresh_private.pem
REFRESH_PUBLIC_KEY=../assets/keys/refresh_public.pem

# JWT Claims
JWT_AUDIENCE=tauras-app-users
JWT_ISSUER=tauras-backend

# Application Configuration
APP_PORT=3000
BASE_URL=http://localhost:3000
NODE_ENV=development
LOG_LEVEL=info

# {{code}} is a placeholder for the verification code
VERIFY_EMAIL_LINK=http://localhost:3000/auth/verify-email?code={code}
VERIFY_EMAIL_PASSCODE_LIFETIME=600
VERIFY_EMAIL_PASSCODE_RESEND_RATE=180

# Database Configuration
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}
DB_HOST=postgres
DB_PORT=5432
DB_NAME=tauras_db
DB_USER=postgres
DB_PASSWORD=db_password

# Redis Configuration
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_USER=default
REDIS_PASSWORD=redis_password

# Mail Configuration
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_FROM=Support
MAIL_USER=notification
MAIL_PASSWORD=notification_password
MAIL_SECURE=false